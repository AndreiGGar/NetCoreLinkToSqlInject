@model ICoche


<h4>@Model.Marca, @Model.Modelo</h4>
<img src="@Model.Imagen" style="width:350px; height: 200px;" />

<h4 style="color:purple">Velocidad actual: @Model.Velocidad</h4>

<h4 style="color: crimson">Velocidad máxima: @Model.VelocidadMax</h4>

<form method="post">
    <button name="accion" value="acelerar" class="btn btn-outline-info">Acelerar</button>
    <button name="accion" value="frenar" class="btn btn-outline-danger">Frenar</button>
</form>